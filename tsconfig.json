{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext"],
    "module": "esnext",
    "outDir": "dist",
    "strict": true,
    "target": "ES2018",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
